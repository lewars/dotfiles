 '(show-paren-match ((t (:background "dim gray" :foreground "cyan" :weight ultra-bold))))
 '(treemacs-root-face ((t (:inherit font-lock-string-face :weight bold :height 1.0))))
 '(vertical-border ((t (:background "#1c262b" :foreground "#1c262b")))))

